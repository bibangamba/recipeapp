<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        app:cardElevation="4dp"
        android:layout_margin="2dp"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/recipe_list_imageview"
                android:contentDescription="@string/recipe_image_content_description" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.029" app:layout_constraintVertical_bias="0.013"/>
        <TextView
                tools:text="recipe name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/recipeTitle"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/recipe_list_imageview"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.096"
                app:layout_constraintVertical_bias="0.043" android:textSize="18sp"/>
        <TextView
                tools:text="2 people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/servings" app:layout_constraintStart_toStartOf="@+id/recipeTitle"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/recipeTitle"/>
        <TextView
                tools:text="30 mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timeToPrepare" app:layout_constraintStart_toStartOf="@+id/recipeTitle"
                android:textStyle="bold" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/servings"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
